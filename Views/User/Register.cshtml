@model TaskManagement.Models.User

<h1 tyle="padding:20px 0;">Registration</h1>

<form method="post" asp-action="Register">
    <div class="form-group">
        <label asp-for="FullName" style="margin-top:10px;">Full Name</label>
        <input asp-for="FullName" class="form-control" required style="width:50%;margin-bottom:10px;">
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email" style="margin-top:10px;">Email</label>
        <input asp-for="Email" class="form-control" required style="width:50%;margin-bottom:10px;">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" style="margin-top:10px;">Password</label>
        <input asp-for="Password" type="password" class="form-control" required style="width:50%;margin-bottom:10px;">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>
