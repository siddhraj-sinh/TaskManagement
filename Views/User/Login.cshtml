@model TaskManagement.Models.User

<h1 style="padding:20px;">Login</h1>

<form method="post" asp-action="Login">
    <div class="form-group" style="padding:20px;">
        <label asp-for="Email">Email:</label>
        <input asp-for="Email" class="form-control" style="width:50%" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group" style="padding:20px;">
        <label asp-for="Password">Password:</label>
        <input asp-for="Password" type="password" class="form-control" style="width:50%" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div style="display:flex;">
        <button type="submit" class="btn btn-primary" style="margin:10px 0 0 10px;">Login</button>
</form>
<p style="margin-left:270px; margin-top:10px;">
    Don't have a account @Html.ActionLink("Register", "Register", "User")
</p>
    </div>