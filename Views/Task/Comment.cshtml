                <div class="form-group">
                    <input type="text" id="comment" name="Content" class="form-control" style="width:50%" />
                </div>

                <button type="submit" class="btn btn-primary" style="margin:10px;">Save</button>
                <a asp-controller="Task" asp-action="Index" class="btn btn-secondary">Cancel</a>
